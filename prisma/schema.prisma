generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model results {
  result_id  Int      @id @default(autoincrement())
  player_id  Int
  score      Int
  created_at DateTime @default(now()) @db.Timestamp(0)
  users      users    @relation(fields: [player_id], references: [id], onUpdate: Restrict, map: "results_ibfk_1")

  @@index([player_id], map: "player_id")
}

model users {
  id         Int       @id @default(autoincrement())
  first_name String    @db.VarChar(50)
  last_name  String    @db.VarChar(50)
  email      String    @unique(map: "email") @db.VarChar(100)
  password   String    @db.VarChar(255)
  address    String    @db.VarChar(255)
  zip_code   String    @db.VarChar(10)
  city       String    @db.VarChar(50)
  chat       chat[]
  results    results[]
}

model chat {
  post_id   Int       @id @default(autoincrement())
  user_id   Int
  content   String    @db.Text
  timestamp DateTime? @default(now()) @db.DateTime(0)
  users     users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "chat_ibfk_1")

  @@index([user_id], map: "user_id")
}
